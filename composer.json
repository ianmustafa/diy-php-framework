{
    "name": "ianmustafa/diy-php-framework",
    "type": "project",
    "description": "Do-It-Yourself PHP Framework.",
    "license": "MIT",
    "authors": [
        {
            "name": "Ian Mustafa",
            "email": "mail@ianmustafa.com"
        }
    ],
    "require": {
	    "php": "^7.1",
        "nikic/fast-route": "^1.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "System\\": "system/src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
